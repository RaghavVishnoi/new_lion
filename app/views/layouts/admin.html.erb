<!DOCTYPE html>
<html class="no-js"  dir="ltr" lang="en-US">
<head>
	 <meta charset="utf-8" />	
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    		<%= favicon_link_tag "/assets/logo9.png", rel: 'icon', type: 'image/png' %>
		 
         
  <title>SKC</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
  
  <%= javascript_include_tag 'https://maps.google.com/maps/api/js?sensor=true', 'data-turbolinks-track' => true %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
  <%= csrf_meta_tags %>
 <body id="top" class="ndhome">
    <header class="header1 headerStyle1" id="header">
			<div class="ndheader" id="ndheader">
				<div class="sticky scrollHeaderWrapper" id="header">
					<div class="container">
						<div class="row">
							<div class="col-sm-12">
								<div class="logo pull-left">											 
									<a class="navbar-brand" href="" id="home">
										<div>	
											<img src="/assets/logo9.png" class="preload-gif" id="logo">
											<span>SK</span><span class="font-color">CONSULTANTS.</span></div>
												</a>
								</div>
 					<nav class="mainMenu mainNav pull-right" id="mainNav">
						<ul class="navTabs">
							<li>
								<a href="" id="dashboard">Dashboard</a>
							</li>
							<li>
								<a href="" id="jobs">Jobs</a>
								<ul class="dropDown sub-menu">
									<li><a href="" id="post-job">Post Job</a></li>
									<li><a href="" id="list-jobs">List Jobs</a></li>			
								</ul><!-- end of dropdown -->
							</li>
							<li>
								<a href="" id="mcandidate">Candidates</a>
							</li>
							<li>
								<a href="" id="logout">Logout</a>		
							</li>		
						</ul><!-- end of nav tabs -->
					</nav><!-- end of main nav -->


					<a href="#" class="generalLink" id="responsiveMainNavToggler"><i class="fa fa-bars"></i></a>
					<div class="clearfix"></div><!-- end of clearfix -->
					<div class="responsiveMainNav"></div><!-- end of responsive main nav -->
							  
							</div><!-- end fo col 12 -->
						</div><!-- end of row -->
					</div><!-- end of container -->
				</div><!-- end of sticky -->
			</div><!-- end of ndheader -->
		</header><!-- end of header -->
	<%= yield %>
</body>
<script type="text/javascript">
	$("#post-job").click(function(){
			location.href = "/current_openings/new"
	})
	$("#list-jobs").click(function(){
			location.href = "/current_openings"
	})
	$("#mcandidate").click(function(){
			location.href = "/candidates"
	})
	$("#logout").click(function(){
			location.href = "/users/sign_out"
	})
	$("#home").click(function(){
			location.href = "/"
	})
</script>	
